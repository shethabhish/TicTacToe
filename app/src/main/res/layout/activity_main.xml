                android:layout_height="50pt" android:id="@+id/b8" android:onClick="buClick"/>
        <Button
                android:layout_margin="3pt"
                android:layout_width="50pt"
                android:layout_height="50pt" android:id="@+id/b9" android:onClick="buClick"/>
    </TableRow>
</TableLayout>